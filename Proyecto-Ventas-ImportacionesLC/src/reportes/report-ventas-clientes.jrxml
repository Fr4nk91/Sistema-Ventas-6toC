	<queryString>
		<![CDATA[SELECT
    ventas.`fecha`,
    ventas.`idventa`,
    CONCAT(clientes.`nombre`, ' ', clientes.`apellido`) AS cliente_nombre_completo,
    SUM(detalle_ventas.`precio_unitario` * detalle_ventas.`cantidad`) AS total_compras
FROM
    `clientes` clientes
    INNER JOIN `ventas` ventas ON clientes.`idcliente` = ventas.`idcliente`
    INNER JOIN `detalle_ventas` detalle_ventas ON ventas.`idventa` = detalle_ventas.`idventa`
WHERE  STR_TO_DATE(ventas.`fecha`, '%d/%m/%Y') BETWEEN $P{FECHA_INICIO} AND $P{FECHA_FIN}
GROUP BY
    fecha, idventa, cliente_nombre_completo
ORDER BY
    fecha DESC;]]>
	</queryString>
